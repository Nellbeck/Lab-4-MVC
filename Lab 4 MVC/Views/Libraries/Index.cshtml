@model IEnumerable<Lab_4_MVC.Models.Library>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

@using (Html.BeginForm("Index", "Libraries", FormMethod.Get))
{
    <p>
        Search: @Html.TextBox("data", ViewBag.FilterValue as string)
        <input type="submit" value="Find" />
    </p>

}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BorrowDateStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.borrowDateEnd)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Book.BookName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BorrowDateStart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.borrowDateEnd)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LibraryId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LibraryId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.LibraryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
